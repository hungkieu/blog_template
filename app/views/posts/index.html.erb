<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="row">
  <div class="col"><%= link_to 'New Post', new_post_path %></div>
  <div class="col"><%= link_to 'Back', admin_index_path %></div>
</div>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Content</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.category_id %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.visible %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td>
        <%= link_to 'Destroy', delete_path(id: post.id, type: 'post') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col">
    <h1><%= @post.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col">Created: <%= @post.created_at.strftime("%d-%B-%Y") %></div>
</div>

<div class="row">
  <div class="col"><%= @post.content %></div>
</div>

<h3>Comments</h3>

<% @comments.each do |c| %>
  <p> <%= c.comment %> </p>
<% end %>

<%= form_with(model: @post.comments.new, url: comments_path(@post), local: true) do |form| %>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :comment_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
